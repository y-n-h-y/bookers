<div class="edit">
    <h1>編集画面</h1>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラー
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
    <%= form_with model:@book, local:true do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>感想</h4>
    <%= f.text_area :body %>
    <div class="save">
        <%= f.submit '保存', class:"save-link" %>
    </div>
  <% end %>
</div>
