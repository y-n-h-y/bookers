<div class="book-list">
    <h2>Books</h2>
    <div class="book-list_table">
        <table>
            <thead>
              <tr>
                 <th>タイトル</th>
                 <th>感想</th>
                 <th></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to '閲覧', book_path(book.id), class:"list-link" %></td>
                    <td><%= link_to '編集', edit_book_path(book.id), class:"list-link" %></td>
                    <td><%= link_to '削除', book_path(book.id), method: :delete, "datacomfilm" => "本当に削除しますか？", class:"list-link" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class="new-book">
<h2>New&thinsp;Book</h2>

<%= form_with model:@book, local:true do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>感想</h4>
<%= f.text_area :body %>

<div class="submit"><%= f.submit '作成' %></div>
</div>

<% end %>


