<div class="book-list">
    <h2>Books</h2>
    <div class="book-list_table">
        <table>
            <thead>
              <tr>
                 <th>title</th>
                 <th>body</th>
                 <th></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to 'Show', book_path(book.id), class:"list-link" %></td>
                    <td><%= link_to 'Edit', edit_book_path(book.id), class:"list-link" %></td>
                    <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: {confirm: "Are you sureï¼Ÿ"}, class:"list-link" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

